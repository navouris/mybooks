<h2>τα βιβλία μου - <span style='color:#007bff;''>{{user}} ({{data.length}})</span></h2>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Τίτλος</th>
        <th>Συγγραφείς</th>
        <th>Σχόλια</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/create">Προσθήκη</a>
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.author}}</td>
          <td>{{this.comment}}</td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/edit/{{this.bookID}}">Αλλαγή</a>
            <a class="btn btn-sm btn-danger" href="/delete/{{this.bookID}}">Διαγραφή</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
