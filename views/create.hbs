<h1>Προσθήκη  νέου βιβλίου</h1>

<form action="/create" method="post">
  <div class="form-horizontal">

    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="title">Τίτλος</label>
      <div class="col-sm-8">
        <input autofocus class="form-control" name="title" value="{{data.title}}" />
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="author">Συγγραφείς</label>
      <div class="col-sm-7">
        <input class="form-control" name="author" value="{{data.author}}" />
      </div>
    </div>
    
    <div class="form-group row">
      <label class="col-form-label col-sm-2" for="comment">Σχόλια</label>
      <div class="col-sm-10">
        <textarea class="form-control" cols="20" name="comment" maxlength="32000" rows="7">{{data.comments}}</textarea>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-form-label col-sm-2"></label>
      <div class="col-sm-10">
        <input type="submit" value="Προσθήκη" class="btn btn-default btn-success" />
        <a class="btn btn-outline-dark cancel" href="/books">Ακύρωση</a>
      </div>
    </div>
  </div>
</form>
